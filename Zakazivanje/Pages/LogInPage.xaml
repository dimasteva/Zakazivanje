<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zakazivanje.Pages.LogInPage"
             Title="LogInPage">
    <VerticalStackLayout>
        <Label
            x:Name="labTitle"
            Margin="0, 50, 0, 0"
            Text="ZakazivanjeApp"
            HorizontalOptions="Center"
            />
        <Entry
            x:Name="entEmail"
            Margin="0,100,0,0"
            Placeholder="email"
            WidthRequest="200"
            />
        <Entry
            x:Name="entPassword"
            Margin="0, 10, 0, 0"
            IsPassword="True"
            Placeholder="password"
            WidthRequest="200"
            />
        <Button  
            x:Name="btnLogIn"
            Margin="0, 50, 0, 0"
            Text="Log in"
            Clicked="btnLogIn_Clicked"
            WidthRequest="200"
            />
    </VerticalStackLayout>
</ContentPage>